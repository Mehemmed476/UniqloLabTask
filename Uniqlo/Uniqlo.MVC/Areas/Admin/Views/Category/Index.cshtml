@using Uniqlo.DAL.Models
@model List<Category>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <span style="font-size: 2em;">Categories</span>
            <span class="float-right">
                <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Category" asp-action="Create">Create Category</a>
            </span>
            <span class="float-right">
                <a type="button" class="btn btn-warning mr-3" asp-area="Admin" asp-controller="Category" asp-action="Trash">Trash <i class="fa-solid fa-trash"></i></a>
            </span>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="position: relative; left: 100px;">
            <table class="table table-bordered" style="width: 85%;" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Configures</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Configures</th>
                    </tr>
                </tfoot>
                @if (Model != null && Model.Any())
                {
                    <tbody>
                        @foreach (Category category in Model)
                        {
                            <tr>
                                <td>
                                    <span style="position: relative; top: 18px;">@category.Id</span>
                                    <a type="button" class="btn btn-secondary" style="position: relative; top: 18px; left: 15px;" asp-area="Admin" asp-action="Details" asp-controller="Category" asp-route-Id="@category.Id"><i class="fa-solid fa-circle-info"></i></a>
                                </td>
                                <td><span style="position: relative; top: 28px;">@category.Title</span></td>
                                <td><span style="position: relative; top: 28px;">@category.Description</span></td>
                                <td>
                                    <a type="button" class="btn btn-primary mt-3 ml-5 mr-3" asp-area="Admin" asp-action="Update" asp-controller="Category" asp-route-Id="@category.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a type="button" class="btn btn-warning mt-3 mr-3" asp-area="Admin" asp-action="SoftDelete" asp-controller="Category" asp-route-Id="@category.Id"><i class="fa-sharp fa-solid fa-trash"></i></a>
                                    <a type="button" class="btn btn-danger mt-3" asp-area="Admin" asp-action="Delete" asp-controller="Category" asp-route-Id="@category.Id"><i class="fa-solid fa-delete-left"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <h3>No Categories Found</h3>
                }
            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
