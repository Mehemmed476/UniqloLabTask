@using Uniqlo.DAL.Models
@model List<Product>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <span style="font-size: 2em;">Products</span>
            <span class="float-right">
                <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="Create">Create Product</a>
            </span>
            <span class="float-right">
                <a type="button" class="btn btn-warning mr-3" asp-area="Admin" asp-controller="Product" asp-action="Trash">Trash <i class="fa-solid fa-trash"></i></a>
            </span>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="position: relative; left: 100px;">
            <table class="table table-bordered" style="width: 85%;" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Created Date</th>
                        <th>Modified Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Created Date</th>
                        <th>Modified Date</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                @if (Model != null && Model.Any())
                {
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <span style="position: relative; top: 18px;">@product.Id</span>
                                    <a type="button" class="btn btn-secondary" style="position: relative; top: 18px; left: 15px;" asp-area="Admin" asp-action="Details" asp-controller="Product" asp-route-Id="@product.Id"><i class="fa-solid fa-circle-info"></i></a>
                                </td>
                                <td><span style="position: relative; top: 28px;">@product.Title</span></td>
                                <td><span style="position: relative; top: 28px;">@product.Price</span></td>
                                <td><span style="position: relative; top: 28px;">@product.Category?.Title ?? "No Category"</span></td>
                                <td>
                                    <span style="position: relative; top: 28px;">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="~/upload/products/@product.ImageUrl" alt="@product.Title" style="width: 100px; height: 100px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </span>
                                </td>
                                <td><span style="position: relative; top: 28px;">@product.CreatedDate</span></td>
                                <td><span style="position: relative; top: 28px;">@product.ModifiedDate</span></td>
                                <td>
                                    <a type="button" class="btn btn-primary mt-3 ml-5 mr-3" asp-area="Admin" asp-action="Update" asp-controller="Product" asp-route-Id="@product.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a type="button" class="btn btn-warning mt-3 mr-3" asp-area="Admin" asp-action="SoftDelete" asp-controller="Product" asp-route-Id="@product.Id"><i class="fa-sharp fa-solid fa-trash"></i></a>
                                    <a type="button" class="btn btn-danger mt-3" asp-area="Admin" asp-action="Delete" asp-controller="Product" asp-route-Id="@product.Id"><i class="fa-solid fa-delete-left"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <h3>No Products Found</h3>
                }
            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
